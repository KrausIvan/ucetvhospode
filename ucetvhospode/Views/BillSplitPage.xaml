<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ucetvhospode.Views.BillSplitPage"
             Title="BillSplitPage">

    <StackLayout Padding="20">
        <Entry Placeholder="Účtovaná částka"
               Text="{Binding BillAmount, Mode=TwoWay}" 
               Keyboard="Numeric"/>

        <Slider Minimum="0" Maximum="10"
                Value="{Binding TipPercentage, Mode=TwoWay}"/>

        <Label Text="{Binding TotalAmount, StringFormat='Celkem: {0:C}'}"/>
        <Label Text="{Binding Share, StringFormat='Podíl: {0:C}'}"/>
        <Label Text="{Binding ShareWithTip, StringFormat='Velké číslo: {0:C}'}"/>

        <Button Command="{Binding DecreaseGuestsCommand}" Text="-"/>
        <Label Text="{Binding NumberOfGuests}"/>
        <Button Command="{Binding IncreaseGuestsCommand}" Text="+"/>
    </StackLayout>

</ContentPage>
